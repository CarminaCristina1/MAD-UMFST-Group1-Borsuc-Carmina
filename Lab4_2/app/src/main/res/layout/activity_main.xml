<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/introTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduction_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/chapter1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_title"
        android:layout_margin="8dp"
        android:onClick="openChapter1Activity"/>

    <Button
        android:id="@+id/chapter2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter2_title"
        android:layout_margin="8dp"
        android:onClick="openChapter2Activity"/>

    <Button
        android:id="@+id/chapter3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter3_title"
        android:layout_margin="8dp"
        android:onClick="openChapter3Activity"/>

    <Button
        android:id="@+id/chapter4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter4_title"
        android:layout_margin="8dp"
        android:onClick="openChapter4Activity"/>

</LinearLayout>
